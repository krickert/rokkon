# .env.all-modules - Environment configuration for all modules

# --- Consul Configuration ---
CONSUL_VERSION=1.21

# --- Image Names ---
ENGINE_IMAGE=pipeline/pipeline-engine:latest
ECHO_MODULE_IMAGE=pipeline/echo-module:latest
TEST_MODULE_IMAGE=pipeline/test-module:latest

# --- Configuration Profile ---
PROFILE=docker-compose

# --- Engine Ports ---
ENGINE_REST_PORT=39000
ENGINE_GRPC_PORT=49000

# --- Echo Module Ports ---
ECHO_MODULE_REST_PORT=39090
ECHO_MODULE_GRPC_PORT=49090

# --- Test Module Ports ---
TEST_MODULE_REST_PORT=39095
TEST_MODULE_GRPC_PORT=49095

# --- Cluster Configuration ---
CLUSTER_NAME=docker-cluster
ENGINE_NAME=engine-docker